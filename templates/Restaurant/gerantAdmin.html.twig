{% block slider %}

{% endblock %}

{% block blog %}

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate text-center fadeInUp ftco-animated">
                    <h2 class="mb-4">Tous les Gerant sur notre plateforme</h2>
                    <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                    <p class="mt-5">gérer tous les gérants</p>

                    {% block flash %}
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}

                    {% endblock %}
                </div>
            </div>
            <div class="row">

                {% for c in clients  %}


                    <div class="col-lg-3 d-flex mb-sm-4 ftco-animate fadeInUp ftco-animated">
                        <div class="staff">
                            <div class="img mb-4" style="background-image: url({{asset('theme/images/')}}{{ c.photo }});"></div>
                            <div class="info text-center">
                                <h3><a href="#">{{ c.nom }} </a></h3>
                                <h3><a href="#">{{ c.nom }} </a></h3>
                                <span class="position">{{ c.email }}</span>
                                <span class="position">{{ c.tel }}</span>
                                <a href="{{path('remove_gerant', { 'id': c.id })}}" class="btn btn-danger btn-outline-danger">Supprimer</a>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}