{% block blog %}
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate text-center">
                    {% block flash %}
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}

                    {% endblock %}
                    <h2 class="mb-4">Voici tes commandes  </h2>
                    <p> vous pouvez ici trouvé les commandes lancé par vous meme triée par date</p>
                    <br><br>

                    <center>
                        <div class="row">
                            {% for c in commandes  %}

                                <div class="pricing-entry d-flex ftco-animate">
                                    <div class="" > {{ c.date |date('d/m/Y') }}</div>
                                    <div class="desc pl-3">

                                        <div class="d-flex text align-items-center">
                                            <h3><span> {{ c.quantite }} : {{ c.name }} - {{ c.type }}</span></h3>
                                            <span class="price">{% if c.traite == false %}
                                                <a href="{{path('traite_restau', { 'id': c.id })}}" class="btn btn-white btn-outline-white">Traiter ?</a>
                                                {% else %}
                                                    <p class="text-primary"> Traité</p>
                                                {% endif %}</span>
                                        </div>
                                        <div class="d-block align-content-center" >
                                            <p>Restaurant : {{ c.idrestaurant.name }} - De mr {{ c.iduser.nom }} <a
                                                        href="{{ path('consulterprofil', { 'id': c.iduser.id }) }}"> voir profil</a></p>
                                        </div>

                                    </div>
                                </div>

                            {% endfor %}
                        </div>
                    </center>

                </div>
    </section>

    </div>
    </div>

    </div>
    </section>
{% endblock %}