{% block blog %}
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate text-center">
                    {% block flash %}
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if app.session.flashBag.has('error') %}
                            <div class="alert alert-danger">
                                {% for msg in app.session.flashBag.get('error') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}

                    {% endblock %}
                    <h2 class="mb-4">Bienvenue Mr {{ user.nom }} </h2>
                    <p> ici vous trouvez toutes les informations concernant votre profil vous pouvez les modifier a tout moment .. </p>

                    <br><br>

                    <center>

                            <div class="staff">
                                <div class="img mb-4" style="background-image: url({{asset('theme/images/')}}{{ user.photo }});"></div>
                                <div class="info text-center">
                                    <form  method="post" class="contact-form" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input type="text" name = "name" value="{{ user.nom }}" class="form-control" minlength="5" placeholder="Nom de l'utilisateur">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input type="text" name="prenom" value="{{ user.prenom }}" minlength="5" class="form-control" placeholder="prenom">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control" value="{{ user.email }}" minlength="10" name="email" placeholder="email">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" minlength="5" name="password" placeholder="password">
                                        </div>

                                        <div class="form-group">
                                            <input type="text" class="form-control" value="{{ user.tel }}" name="tel" placeholder="tel">
                                        </div>
                                        <div class="form-group">
                                            <input type="file" name="photo"  class="form-control" enctype="multipart/form-data">
                                        </div>
                                        <div class="form-group">
                                            <button   class="btn btn-primary py-3 px-5">Modifier</button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                    </center>

                </div>
    </section>

    </div>
    </div>

    </div>
    </section>
{% endblock %}